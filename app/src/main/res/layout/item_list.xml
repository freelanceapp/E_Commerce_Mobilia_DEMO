<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="8dp">

    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_marginTop="60dp"
          android:id="@+id/view_background"
          android:background="@drawable/shape_background_item_list"
          app:layout_constraintBottom_toBottomOf="@id/tv_price_item_list"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@+id/iv_item_list"/>

    <ImageView android:layout_width="120dp"
               android:layout_height="150dp"
               android:layout_gravity="center"
               android:scaleType="fitCenter"
               android:id="@+id/iv_item_list"
               android:contentDescription="@null"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:src="@drawable/img_cadeira_biscoito_fino"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:id="@+id/tv_title_item_list"
              style="@style/TextViewProductNameList"
              android:text="Cadeira Roseta"
              app:layout_constraintTop_toBottomOf="@+id/iv_item_list"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="50dp"
              android:gravity="center|top"
              android:id="@+id/tv_price_item_list"
              style="@style/TextViewProductPriceList"
              android:text="R$ 240,00"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tv_title_item_list"/>

</android.support.constraint.ConstraintLayout>